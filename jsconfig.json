{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "~/*": [
                "./resources/nuxt/*"
            ],
            "@/*": [
                "./resources/nuxt/*"
            ],
            "~~/*": [
                "./resources/nuxt/*"
            ],
            "@@/*": [
                "./resources/nuxt/*"
            ]
        }
    },
    "exclude": [
        "node_modules",
        ".nuxt",
        "dist"
    ]
}
